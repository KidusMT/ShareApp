<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_topic_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_topic_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_rabbit" />

            <TextView
                android:id="@+id/card_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_topic_thumbnail"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:text="topic name"
                android:textColor="@color/material_grey_700" />

            <TextView
                android:id="@+id/card_topic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_topic_title"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:maxLines="3"
                android:fontFamily="@font/roboto_light"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:text="topic name"
                android:textColor="@color/material_grey_700" />

            <!--<TextView-->
            <!--android:id="@+id/count"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/title"-->
            <!--android:paddingBottom="16dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:textSize="@dimen/songs_count" />-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>