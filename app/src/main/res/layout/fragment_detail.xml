<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        style="@style/Toolbar"
        android:background="@color/colorPrimary"
        app:subtitleTextColor="@color/black_effective"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sensor_swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <include layout="@layout/card_posts" />

                <TextView
                    android:id="@+id/detail_comment_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="5 comments"
                    android:textColor="@color/material_grey_700"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/detail_comment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/card_comments" />

                <!--<TextView-->
                <!--android:id="@+id/tv_no_sensor"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_margin="5dp"-->
                <!--android:fontFamily="@font/roboto_light"-->
                <!--android:text="@string/no_sensors_list_found"-->
                <!--android:textAlignment="center"-->
                <!--android:textSize="18sp"-->
                <!--android:visibility="gone" />-->

            </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout>